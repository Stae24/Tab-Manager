{
  "manifest_version": 3,
  "name": "Opera GX Island Manager",
  "version": "1.0.0",
  "description": "Advanced tab and island manager with cloud sync and memory optimization.",
  "permissions": ["tabs", "tabGroups", "storage", "unlimitedStorage", "favicon", "sidePanel"],
  "host_permissions": ["<all_urls>"],

  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Island Manager"
  },
  "sidebar_action": {
    "default_panel": "index.html",
    "default_icon": "icons/icon16.png",
    "default_title": "Island Manager"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
