{
  "manifest_version": 3,
  "name": "Opera GX Island Manager",
  "version": "1.0.0",
  "description": "Advanced tab and island manager with cloud sync and memory optimization.",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "_favicon/*",
        "index.html",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Island Manager"
  },
"commands": {
    "toggle-island-manager": {
      "description": "Open or focus Island Manager"
    }
  }
}